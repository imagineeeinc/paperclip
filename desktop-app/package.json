{
  "name": "paperclip-desktop",
  "version": "1.0.0",
  "private": true,
  "description": "the desktop app for the paperclip notebook app",
  "main": "src/app.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder -m -l -w",
    "dist-win": "electron-builder --win",
    "dist-win-32": "electron-builder --win --ia32",
    "dist-win-all": "electron-builder --win --ia32 --armv7l --arm64",
    "dist-mac": "electron-builder --mac",
    "dist-linux": "electron-builder --linux"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/imagineeeinc/paperclip.git"
  },
  "author": "imagineeeinc",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/imagineeeinc/paperclip/issues"
  },
  "homepage": "https://github.com/imagineeeinc/paperclip#readme",
  "devDependencies": {
    "electron": "^10.4.7",
    "electron-builder": "^22.11.7",
    "fs-extra": "^10.1.0"
  },
  "build": {
    "appId": "paperclip",
    "productName": "Paperclip",
    "copyright": "Copyright Â© 2022 Imagineee",
    "mac": {
      "category": "public.app-category.productivity",
      "darkModeSupport": true,
      "target": [
        "default",
        "dmg",
        "zip"
      ]
    },
    "win": {
      "publisherName": "Imagineee",
      "target": [
        "portable",
        "zip",
        "nsis"
      ]
    },
    "linux": {
      "category": "Productivity",
      "target": [
        "AppImage",
        "apk",
        "zip",
        "deb",
        "rpm"
      ]
    }
  }
}
