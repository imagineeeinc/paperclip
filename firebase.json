{
  "hosting": {
    "site": "paper-clip",
    "public": "dist",
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/app/",
        "destination": "/app/index.html"
      },
      {
        "source": "/share/",
        "destination": "/share/index.html"
      },
      {
        "source": "/downloads/",
        "destination": "/downloads/index.html"
      },
      {
        "source": "/.well-known/assetlinks.json",
        "destination": "/.well-known/assetlinks.json"
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  }
}
